        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="#000000" />
            <gradient android:angle="-90" android:startColor="#cf0606" android:endColor="#de0909"  />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
